{
    "name": "tibezh/novapay-php",
    "description": "PHP library for integration with NovaPay payment system. Supports direct payments, hold payments, and secure purchases.",
    "type": "library",
    "license": "MIT",
    "keywords": ["novapay", "payment", "ukraine", "nova poshta", "ecommerce"],
    "homepage": "https://github.com/tibezh/novapay-php",
    "autoload": {
        "psr-4": {
            "Tibezh\\NovapayPhp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tibezh\\NovapayPhp\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Ivan Tibezh",
            "email": "ivan.tbzh@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "ext-openssl": "*",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.40"
    },
    "scripts": {
      "phpstan": "@php vendor/bin/phpstan analyse",
      "test": "@php vendor/bin/phpunit",
      "test-coverage-html": "@php vendor/bin/phpunit --coverage-html .phpunit.cache",
      "lint": "@php vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --diff --dry-run --using-cache=no --allow-risky=yes",
      "lint-fix": "@php vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
