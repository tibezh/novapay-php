{
    "name": "tibezh/novapay-php",
    "description": "PHP library for integration with NovaPay payment system. Supports direct payments, hold payments, and secure purchases.",
    "type": "library",
    "license": "MIT",
    "keywords": ["novapay", "payment", "ukraine", "nova poshta", "ecommerce"],
    "homepage": "https://github.com/tibezh/novapay-php",
    "autoload": {
        "psr-4": {
            "Tibezh\\NovapayPhp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tibezh\\NovapayPhp\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Ivan Tibezh",
            "email": "ivan.tbzh@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-openssl": "*",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "php-cs-fixer/shim": "^3.0"
    },
    "scripts": {
        "test": "phpunit",
        "cs-fix": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
